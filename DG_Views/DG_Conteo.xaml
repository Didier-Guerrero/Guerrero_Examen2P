<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Guerrero_AppEvaluacion.DG_Views.DG_Conteo"
             Title="DG_Conteo">
    <AbsoluteLayout  Margin="5" VerticalOptions="Center">
        <Editor x:Name="TextEditor"
                Placeholder="Ingrese el texto"
                Text="{Binding Text}"
                HeightRequest="100" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="4" RowSpacing="6">
            <Button Text="Calcular"
                    Clicked="DG_GuardarButton_Clicked" />

            <Button Grid.Column="1"
                    Text="Limpiar"
                    Clicked="DG_EliminarButton_Clicked" />
        </Grid>
    </AbsoluteLayout>
</ContentPage>